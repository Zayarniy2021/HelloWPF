<Window x:Class="SimpliestExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpliestExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="800">
    <Window.Resources>
        <local:Person x:Key="person">
        </local:Person>
    </Window.Resources>    
    <StackPanel>
        <TextBlock Text="{Binding Name}" DataContext="{StaticResource person}" x:Name="lblName"/>
        <Button x:Name="btnButton" Click="btnButton_Click" Content="Click me"/>
    </StackPanel>
</Window>
