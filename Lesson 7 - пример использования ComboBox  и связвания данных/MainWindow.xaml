<Window x:Class="Lesson5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <TabControl>
            <TabItem Header="Сотрудники">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="DataGrid" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Имя" Binding="{Binding Path=strFirstName}"/>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding Path=strLastName}"/>
                            <DataGridTextColumn Header="День Рождения" Binding="{Binding Path=dtBirthDay}"/>
                            <DataGridComboBoxColumn Header="Департамент" SelectedValueBinding="{Binding Path=intDepartment}" x:Name="dataGridComboBox"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Департамент">
                <Grid Background="#FFE5E5E5">
                    <StackPanel>
                        <!--<ListBox x:Name="ListBox" Height="200"></ListBox>-->
                        <DataGrid x:Name="dgDepartments" Height="200" SelectionMode="Single" IsReadOnly="True"></DataGrid>
                        <TextBox x:Name="tbDepartName" Height="50"></TextBox>
                        <Button x:Name="btnAddDepart" Content="Добавить департамент" Click="btnAddDepart_Click"></Button>
                        <Button x:Name="btnDepartRemove" Content="Удалить департамент" Click="btnDepartRemove_Click"></Button>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
