<Window x:Class="_14.HelloGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_14.HelloGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid  ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Button Width="auto" Height="auto" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="0" Click="btnButton1_Click" x:Name="btnButton1">
            <StackPanel Orientation="Horizontal">
                <Image Source="backround.jpg" Width="100" Height="30" />
                <TextBlock>
                    Button1
            </TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>
