<Window x:Class="WCF_Client2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WCF_Client2"
        mc:Ignorable="d"
        Title="Магический шар" Height="450" Width="800" Foreground="#FF835151" Icon="Magic_eight_ball.png">
    <StackPanel>
        <Label Content="Задайте вопрос"/>
        <TextBox Height="23" TextWrapping="Wrap" Text="Можно ли выходить на улицу?" Name="tbQuestion"/>
        <Button Content="Получить совет" Name="btnMagicBallAdvise" Click="BtnMagicBallAdvise_Click"/>
        <Image Source="Magic_eight_ball.png" Width="200" VerticalAlignment="Bottom"/>
        <Label Content="Совет"/>
        <Label Name="lblAdvise"/>
    </StackPanel>
</Window>
