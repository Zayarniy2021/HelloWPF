<Window x:Class="_16.HelloStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16.HelloStackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="400">
    <StackPanel Orientation="Vertical" FlowDirection="LeftToRight">
        <Button>Hello, WPF!</Button>
        <TextBlock Text="I'm here"/>
        <TextBox Text="And you can write here"/>
    </StackPanel>
</Window>
