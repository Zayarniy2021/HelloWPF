<Window x:Class="_010.BindingSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_010.BindingSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" x:Name="wndMainWindow">
    <StackPanel>
        <Label Content="{Binding Path=Width,ElementName=wndMainWindow}"/>
        <Label Content="{Binding Width, ElementName=wndMainWindow, Mode=OneTime}" />
    </StackPanel>
</Window>
