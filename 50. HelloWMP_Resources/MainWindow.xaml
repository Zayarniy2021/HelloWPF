<Window x:Class="_50.HelloWMP_Resources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_50.HelloWMP_Resources"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <sys:String x:Key="strHelloWPF">Hello,WPF из статических ресурсов
        </sys:String>
        <sys:Double x:Key="fontSize">15</sys:Double>
    </Window.Resources>
    
    <StackPanel Margin="10">
        <StackPanel.Resources>
            
        </StackPanel.Resources>
        <TextBlock Text="{StaticResource strHelloWPF}" FontSize="{StaticResource fontSize}" />
    </StackPanel>

</Window>
